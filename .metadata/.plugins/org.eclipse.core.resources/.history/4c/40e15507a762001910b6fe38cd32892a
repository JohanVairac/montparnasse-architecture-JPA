	public int modifierAdresse(Adresse a) {
		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	public List<Personne> FindALLAdresse() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public List<Personne> rechercherParMCAdresse(String mc) {
		// TODO Auto-generated method stub
